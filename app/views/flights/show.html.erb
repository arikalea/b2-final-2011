<h3><%= "Flight Number: #{@flight.number} " %></h3>
<h3><%= "Date: #{@flight.date} " %></h3>
<h3><%= "Time: #{@flight.time} " %></h3>
<h3><%= "Departure City: #{@flight.departure_city} " %></h3>
<h3><%= "Arrival City: #{@flight.arrival_city} " %></h3><br>

<h3>Adult passengers on this flight:</h3>
<ul class="adult-passengers">
  <% @flight.adult_passengers.each do |passenger| %>
    <section id="adult-passenger-<%= passenger.id %>">
      <li><%= passenger.name %>
      <%= button_to "Remove Passenger from flight", flight_passenger_path(passenger.id, @flight.id), method: :delete, local: true %></li>
    </section>
  <% end %>
</ul><br>

<h2><%= "Average age of adult passengers: #{@flight.avg_adult_age}" %></h2>
